@model dio.curso.web.Models.Course.RegisterCourseViewModelInput

@{
  ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Registrar Novo Curso</h4>
<hr />

<div class="row">
  <div class="col-md-4">
    <form asp-action="Register">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="Name" class="control-label">Nome do Curso</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="Description" class="control-label">Descrição</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>

      <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="List">Listar cursos</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}